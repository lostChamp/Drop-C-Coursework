<Window x:Class="Couresach.Windows.Category.AddNewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Couresach.Windows.Category"
        mc:Ignorable="d"
        Title="Добавить" Height="450" Width="400" ResizeMode="NoResize" Background="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" FontWeight="SemiBold">Добавить категорию</TextBlock>
        
        <TextBox Grid.Row="1" FontSize="26" Width="300" Height="40" x:Name="NameOfCategory"></TextBox>
        
        <Button Grid.Row="2" FontSize="20" Height="40" Width="250" Click="AddNewCategory_Button">Добавить</Button>
    </Grid>
</Window>
